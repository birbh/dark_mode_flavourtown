{
    "manifest_version": 3,
    "name":"flavourtown-dark-mode",
    "version":"1.0.0",
    "description":"A dark mode extension for the Flavourtown.",
    "permissions":["storage"],
    "host_permissions": [
        "https://flavourtown.hackclub.com/*"
    ],
    "action":{
        "default_popup": "popup.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[{
        "matches":["https://flavourtown.hackclub.com/*"],
        "js":["content/content.js"]
    }],
    "web_accessible_resources":[{
        "resources": ["styles/dark-mode.css"],
        "matches": ["https://flavourtown.hackclub.com/*"]
    }]

}
